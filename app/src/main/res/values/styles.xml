<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--The theme of widget. This will automatically match the theme of system.-->
    <style name="Widget.Theme" parent="Theme.Material3.DynamicColors.DayNight" />
    <!--The title of the widget-->
    <style name="Widget.Title" parent="TextAppearance.AppCompat.Body2">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>
    <!--The Style of the subtitle/desc. of the widget-->
    <style name="Widget.Subtitle" parent="TextAppearance.AppCompat.Caption">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <!--The style of the overline/chronometer of the widget-->
    <style name="Widget.Overline" parent="TextAppearance.AppCompat.Caption">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">10sp</item>
    </style>
</resources>